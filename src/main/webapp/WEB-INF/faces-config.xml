<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">		
    <application>
        <action-listener>co.edu.uniandes.ecos.statusquo.security.Utils.ResetInputAjaxActionListener</action-listener>
        
        <locale-config>            
            <default-locale>es</default-locale>        
        </locale-config>
       
    </application>
    <navigation-rule>
        <from-view-id>/faces/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>mostrarPrincipal</from-outcome>
            <to-view-id>/faces/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
